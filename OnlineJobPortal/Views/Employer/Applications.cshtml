@model IEnumerable<OnlineJobPortal.Models.JobApplication>
@{
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}

<h2 class="text-primary mb-4">@ViewBag.JobTitle</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No applications found for this job.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Applicant</th>
                    <th>Applied On</th>
                    <th>CV</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var app in Model)
                {
                    <tr>
                        <td>@app.JobSeeker?.FullName</td>
                        <td>@app.AppliedDate.ToShortDateString()</td>
                        <td>
                            @if (!string.IsNullOrEmpty(app.CVPath))
                            {
                                <a href="@Url.Content(app.CVPath)" target="_blank" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-eye"></i> View CV
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No CV</span>
                            }
                        </td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(app.Status)">@app.Status</span>
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <!-- Update Form -->
                                <form asp-action="UpdateApplicationStatus" method="post">
                                    <input type="hidden" name="applicationId" value="@app.Id" />
                                    <div class="input-group input-group-sm">
                                        <select name="status" class="form-select">
                                            <option value="Pending" selected="@(app.Status == "Pending")">Pending</option>
                                            <option value="Accepted" selected="@(app.Status == "Accepted")">Accepted</option>
                                            <option value="Rejected" selected="@(app.Status == "Rejected")">Rejected</option>
                                        </select>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check2"></i> Update
                                        </button>
                                    </div>
                                </form>

                                <!-- Delete Form -->
                                <form asp-action="DeleteApplication" method="post" onsubmit="return confirm('Are you sure you want to delete this application?');">
                                    <input type="hidden" name="applicationId" value="@app.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@functions {
    string GetStatusBadgeClass(string status) => status switch
    {
        "Accepted" => "bg-success",
        "Rejected" => "bg-danger",
        _ => "bg-warning text-dark"
    };
}
