@model IEnumerable<OnlineJobPortal.Models.Job>

@{
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Your Posted Jobs</h2>
        <a asp-action="PostJob" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> Post New Job
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            You haven't posted any jobs yet.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var job in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@job.Title</h5>
                            <p class="card-text mb-1">
                                <i class="bi bi-geo-alt-fill text-muted"></i> <strong>Location:</strong> @job.Location
                            </p>
                            <p class="card-text text-muted small">
                                <i class="bi bi-calendar-event"></i> Posted on: @job.PostedDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0 text-center">
                            <a asp-action="Applications" asp-route-jobId="@job.Id" class="btn btn-outline-primary btn-sm me-1" title="View Applications">
                                <i class="bi bi-card-checklist me-1"></i> View Applications
                            </a>
                            <a asp-action="EditJob" asp-route-id="@job.Id" class="btn btn-outline-warning btn-sm me-1" title="Edit Job">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                            <form asp-action="DeleteJob" asp-route-id="@job.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete Job" onclick="return confirm('Are you sure you want to delete this job?');">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
