<!-- Views/Employer/Index.cshtml -->
@model IEnumerable<OnlineJobPortal.Models.Job>
@{
    Layout = "~/Views/Shared/EmployerLayout.cshtml";
}
<h2 class="mt-4 mb-3">Your Posted Jobs</h2>
<a asp-action="PostJob" class="btn btn-success mb-3">Post New Job</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Posted On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Location</td>
                <td>@job.PostedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Applications" asp-route-jobId="@job.Id" class="btn btn-primary btn-sm">View Applications</a>
                    <a asp-action="EditJob" asp-route-id="@job.Id" class="btn btn-warning btn-sm ms-1">Edit</a>
                    <form asp-action="DeleteJob" asp-route-id="@job.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm ms-1" onclick="return confirm('Are you sure you want to delete this job?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
